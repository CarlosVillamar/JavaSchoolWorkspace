  private long BeamStrength(char[] hackAttempt){
	
	  long damage = 0;
	  long strength = 1
			  ;
	  
	  for(int i = 0; i< hackAttempt.length; i++) {
		  if(hackAttempt[i]=='S') {
			  damage = damage + strength;
		  }else if(hackAttempt[i]=='C') {
			  strength = strength*2;
		  }
	  }
	  return 0;
	  
  }
	
