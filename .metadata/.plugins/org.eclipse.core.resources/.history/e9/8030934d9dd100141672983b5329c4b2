package ArrayProject;

import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.JApplet;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;
import javax.swing.JButton;
import java.util.Scanner;






public class Project1 extends JApplet implements 
ActionListener 
{
	public String LWord;//private?
	public double[] lword;//Private?
	

	JLabel L1;//"In one sentence tell me what is on your mind today.
	JLabel L2;//display all the longest words in session
	static JTextField tf1;//allows user to type in the answer
	JButton b1;//submits answer
	JButton b2;//request all longest words in session
	
	public void init()
	{
		JPanel jp = new JPanel();
		jp.setLayout(new GridLayout(5,2));
		tf1= new JTextField("");
		b1 = new JButton("Submit Your Answer");
		b1.addActionListener(this);
		b2 = new JButton("Find the longest word!!!");
		b2.addActionListener(this);
		L1 = new JLabel("In one sentence tell me what is on your mind today");
		L2 = new JLabel("The Longest word or words are");
		jp.add(tf1);
		jp.add(b1);
		jp.add(b2);
		jp.add(L1);
		jp.add(L2);
		add(jp);
		
	
	}
	
	
	@Override
	public void actionPerformed(ActionEvent e)
		{
		if(e.getActionCommand().equalsIgnoreCase("Submit Your Answer"))
		{
			LWord = tf1.getText();
			L1.setText(LWord);
		}
		if(e.getActionCommand().equalsIgnoreCase("Find the longest word!!!"))
		{
			
			int max = Integer.parseInt(tf1.getText());
			double[] lword = new double[max];
		
			for(int i = 0; i<lword.length;i++)
				{
					if(lword[i] == 3)
					{
					
						L2.setText("Tell me more about longestword please" + lword[i] );
						
						
						
					}
					if(lword[i] == 4)
					{
						
						
					
						L2.setText("Why do you feel longestword" + LWord + "is important" + lword[i]);
						
						
					}
					if(lword[i] == 5)
					{
						
						
						L2.setText("how does longest word affect you"+ lword[i]);
						
					}
					else if(lword[i] >= 5)
					{
						
						
						L2.setText("We seem to be making great progress with longest word"+ lword[i]);
						
					}
					
					else if(lword[i] <=3)
					{
						
						L2.setText("is there something else you would like to discuss"+ lword[i]);
					}
					
				}
		}
		}
}
	